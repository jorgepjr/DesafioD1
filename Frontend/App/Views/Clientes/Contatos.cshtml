@model IEnumerable<ContatoViewModel>

<div class="container">
    <div class="mt-2">
        <div class="float-left">
            <a asp-action="Enderecos" asp-route-clienteId='@TempData["ClienteId"]' class="btn btn-link"><em
                    class="fas fa-arrow-left"></em> Voltar</a>
        </div>
        @if (Model != null)
        {
            <div class="float-right">
                <a asp-controller="Home" asp-action="Index" class="btn btn-link">Sair <em
                        class="fas fa-sign-out-alt"></em></a>
            </div>
        }
    </div>
    <br>
    <div class="progress mt-3">
        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0"
            aria-valuemax="100"><span class="p-2 bg-light alert-secondary">Dados Básicos</span></div>
        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0"
            aria-valuemax="100"><span class="p-2 bg-light alert-secondary">Endereço</span></div>
        <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0"
            aria-valuemax="100">Contatos</div>
    </div>

    <div class="card card-body mt-2">
        <div class="form-group">
            <a class="btn btn-primary float-right" asp-route-clienteId='@TempData["ClienteId"]'
                asp-action="NovoContato">Adicionar</a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Tipo de contato</th>
                    <th scope="col">Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TipoDeContato.Descricao()</td>
                        <td>@item.Valor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>